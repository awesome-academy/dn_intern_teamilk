<section class="hero">
  <div class="container">
    <div class="row">
      <div class="col-lg-9">
        <div class="hero__search">
          <div class="hero__search__form">
            <%= search_form_for @q, url: products_path, method: :GET do |f| %>
              <%= f.search_field :name_cont, placeholder: search_text %>
              <%= f.submit t("shared.search"), class: "site-btn btn btn-success" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
