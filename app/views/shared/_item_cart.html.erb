<tr id="quantity_<%= product_detail.id %>">
  <td class="item">
    <div class="d-flex align-items-start">
      <div class="thumb-image">
        <%= image_tag "img/img_product/traSuaKhoaiMon.png" %>
      </div>
      <div class="name_products">
        <%= product_detail.product_name %>
        <br>
        <%= product_detail.size %>
      </div>
    </div>
  </td>
  <td>
  <div class="update-quantity">
    <button class="minus manage_quantity">-</button>
    <input class="manage_quantity quantity"
      value="<%= quantity %>" />
    <button class="plus manage_quantity">+</button>
  </div>
  </td>
  <td><%= number_to_currency(product_detail.price) %></td>
  <td class="font-weight-bold"> <%= number_to_currency(product_detail.price*quantity) %> </td>
  <td>
    <%= link_to t("delete"), "#", method: :delete, class: "btn btn-danger" %>
  </td>
</tr>
