<div class="container">
  <%= render "search_category" %>
  <div class="row">
    <div class="col-lg-12">
      <div class="shoping__cart__table">
        <table>
          <thead>
            <tr>
              <th class="shoping__product">
                <%= sort_link(@q, :name, t("carts.index.admin.products.category")) %></th>
              <th class="table_center_row"><%= t "admin.products.edit" %></th>
              <th class="table_center_row"><%= t "admin.products.delete" %></th>
            </tr>
          </thead>
          <tbody class="table_center_row">
            <%= render partial: "category_row", collection: @pagy_parent_products, as: :category %>
          </tbody>
        </table>
      </div>
    </div>
    <h6><%== pagy_bootstrap_nav @pagy %></h6>
  </div>
</div>
