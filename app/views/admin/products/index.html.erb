<% provide :title, t("title.products") %>
<div class="container">
  <%= render "search_product" %>
  <div class="row">
    <div class="col-lg-12">
      <div class="shoping__cart__table">
        <table>
          <thead>
            <tr>
              <th class="shoping__product"><%= t "carts.index.product_name" %></th>
              <th class="table_center_row"><%= t "admin.products.edit" %></th>
              <th class="table_center_row"><%= t "admin.products.change_size" %></th>
              <th class="table_center_row"><%= t "admin.products.delete" %></th>
            </tr>
          </thead>
          <tbody class="table_center_row">
            <%= render partial: "product_row", collection: @pagy_children_products, as: :product %>
          </tbody>
        </table>
      </div>
    </div>
    <h6><%== pagy_bootstrap_nav @pagy %></h6>
  </div>
</div>
