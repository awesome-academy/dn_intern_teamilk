$( ".check_a_tag_click" ).one("click", function() {
  $( ".check_a_tag_click" ).find("label").removeClass("active");
  $(this).find("label").addClass("active");
  if ('<%= @product_detail.quantity %>' == 0) {
    $("#status").html('<%= t "product.out_of_stock" %>');
    $(".btn_add_to_cart").hide();
  }
  else {
    $("#status").html('<%= t "product.stocking" %>');
    $(".btn_add_to_cart").show();
  }
});
$(".price_of_product_details").html('<%= number_to_currency(@product_detail.price, :unit => "") %> VND');
$("#product_detail_id").val("<%= @product_detail.id %> ")
